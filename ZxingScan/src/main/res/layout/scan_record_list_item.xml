<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/view_background"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/scan_record_back_layout"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:background="@color/header_view_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scan_record_uri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/captrure_history_ie" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scan_record_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="@color/scan_record_text"
            />

        <TextView
            android:id="@+id/scan_record_bar_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scan_record_name_tv"
            android:layout_marginTop="3dp"
            android:lineSpacingExtra="3dp"
            android:lines="3"
            android:textColor="@color/scan_result_light_gray_cl"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/scan_record_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/scan_result_light_gray_cl"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>
